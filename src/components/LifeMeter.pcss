.reversed {
  transform: scaleX(-1);
}

.life-meter {
  position: relative;
  font-family: Ancient-Modern-Times;

  .health-bar {
    box-sizing: border-box;
    width: 200px;
    height: 20px;
    position: absolute;

    .bar {
      background: #c54000;
      width: 100%;
      height: 10px;
      position: relative;
      border-radius: 5px;
      transition: width 0.5s linear;
    }
  }
}
