.reversed {
  transform: scaleX(-1);
}

.life-meter {
  position: relative;
  font-family: Ancient-Modern-Times;

  .hp {
    color: #ffffff;
    margin-top: 24px;
    font-style: italic;
  }

  .health-bar {
    box-sizing: border-box;
    position: absolute;

    .bar {
      background: #c54000;
      width: 100%;
      height: 10px;
      position: relative;
      border-radius: 5px;
      transition: width 0.5s linear;
    }
  }
}
